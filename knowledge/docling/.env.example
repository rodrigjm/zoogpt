# ============================================================
# Zoocari Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# ============================================================

# Required: OpenAI API Key (for chat, STT, and fallback TTS)
OPENAI_API_KEY=sk-...

# Optional: ElevenLabs API Key (cloud TTS fallback)
# If not set, will use OpenAI TTS as final fallback
ELEVENLABS_API_KEY=

# ============================================================
# TTS Configuration
# ============================================================

# TTS Provider: kokoro (local), elevenlabs (cloud), openai (cloud)
# Default: kokoro (uses tiered fallback if local fails)
TTS_PROVIDER=kokoro

# Kokoro Voice ID (local TTS)
# Options: af_bella, af_nova, af_heart, af_sarah, am_adam, am_eric
# Default: af_heart
TTS_VOICE=af_heart

# ============================================================
# Docker Configuration
# ============================================================

# Warm up Kokoro TTS on container start (reduces first-request latency)
# Set to "false" to disable warmup
WARMUP_TTS=true
